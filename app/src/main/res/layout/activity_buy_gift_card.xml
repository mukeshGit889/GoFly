<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myaccount.giftcard.BuyGiftCardActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_design" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/margin_5"
            android:gravity="center_vertical"
            android:padding="12dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/width_30"
                android:layout_height="@dimen/width_30"
                android:text=""
                android:id="@+id/tv_nameFirst"
                android:gravity="center"
                android:textSize="@dimen/text_14"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@drawable/circle_img_bg"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Savan Jain"
                    android:id="@+id/tv_name"
                    android:fontFamily="@font/hind"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/hind"
                    android:text="Savanjain@gmail.com"
                    android:id="@+id/tv_email"
                    android:textSize="12sp" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:id="@+id/cv_purchasegiftcard"
                app:cardElevation="3dp"

                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/iv_rechare"
                        android:layout_centerVertical="true"
                        android:src="@drawable/giftcard_icon">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Purchased Cards"
                        android:layout_marginLeft="3dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/hind"
                        android:textColor="@color/black"
                        android:layout_toRightOf="@+id/iv_rechare"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>


            </android.support.v7.widget.CardView>



        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/black_tex"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase the Gift card"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:id="@+id/tv_purchase"
            android:fontFamily="@font/hind"
            android:textSize="20sp"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"
            android:layout_marginLeft="@dimen/margin_20"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            app:cardElevation="@dimen/margin_5"
            app:cardCornerRadius="5dp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/iv_gifycard"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:padding="@dimen/margin_5"
                    android:layout_gravity="right"
                    android:id="@+id/tv_price"
                    android:fontFamily="@font/hind"

                    android:background="@color/rating_selected"
                    android:text="3000"/>



            </FrameLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Platinum Card"
            android:id="@+id/tv_card_type"
            android:textColor="@color/black"
            android:textSize="@dimen/text_18"
            android:fontFamily="@font/hind"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Platinum Card"
            android:id="@+id/tv_card_description"
            android:textSize="@dimen/text_16"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_15"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/margin_10"
            android:layout_margin="@dimen/margin_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:id="@+id/et_name"
                    android:hint="Name"></EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_email_id"

                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:hint="Sender email address"></EditText>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/et_phoneno"
                    android:inputType="number"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:hint="Senders Phone Number"></EditText>

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/cb_terms"
                    android:fontFamily="@font/hind"

                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginRight="@dimen/margin_10"
                    android:text="I agree to abide by the Terms and Conditions"
                    android:layout_marginTop="@dimen/margin_15"/>

                <TextView
                    android:layout_width="@dimen/width_150"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/margin_10"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="25dp"
                    android:id="@+id/tv_buy"
                    android:layout_marginBottom="@dimen/margin_20"
                    android:background="@drawable/blue_buttonshape"
                    android:text="Buy"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>