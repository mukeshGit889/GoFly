<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container_booking"
    tools:context="com.gofly.main.activity.MyBookingsActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_flight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/flight"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:padding="@dimen/padding_10"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/colorPrimary"
                        android:background="@drawable/orange_butten"
                        android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_hotel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="@string/hotel"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/orange_butten"
                    android:layout_height="wrap_content" />
                <TextView
                android:id="@+id/tv_bus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/bus"
                android:gravity="center"
                android:layout_margin="3dp"
                android:padding="@dimen/padding_10"
                android:textSize="@dimen/text_12"
                android:textColor="@color/white"
                android:background="@drawable/orange_butten"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_transfer"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Transfer"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white"
                    android:background="@drawable/orange_butten"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_activity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Activity"
                    android:gravity="center"
                    android:layout_margin="3dp"
                    android:padding="@dimen/padding_10"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/white"
                    android:background="@drawable/orange_butten"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

          <!--  <TextView
                android:id="@+id/tv_holiday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="@string/holiday"
                android:gravity="center"
                android:layout_margin="@dimen/margin_5"
                android:padding="@dimen/padding_10"
                android:textStyle="bold"
                android:textSize="@dimen/text_16"
                android:textColor="@color/white"
                android:background="@drawable/orange_butten"
                android:layout_height="wrap_content" />-->
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/toolbar"
        android:id="@+id/rv_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
