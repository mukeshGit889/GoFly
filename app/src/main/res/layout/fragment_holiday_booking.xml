<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_page_bg"
    tools:context=".holiday.fragment.HolidayBookingFragment"
    android:orientation="vertical">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:background="@drawable/blue_gradient"
          android:text="Booking Details"
          android:textColor="@color/white"
          android:textSize="@dimen/text_18"
          android:fontFamily="@font/regular"
          android:gravity="center|start"
          android:paddingLeft="@dimen/margin_10"/>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_margin="@dimen/margin_20">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="@dimen/margin_20"
              android:weightSum="1">
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="0.50"
                  android:layout_height="wrap_content"
                  android:text="Adult"
                  android:textSize="16dp"
                  android:textColor="@color/black"/>
              <TextView
                  android:id="@+id/tv_adults"
                  android:layout_width="0dp"
                  android:layout_weight="0.50"
                  android:layout_height="wrap_content"
                  android:text="2"
                  android:textSize="16dp"
                  android:textColor="@color/black"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="@dimen/margin_10"
              android:weightSum="1">
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="0.50"
                  android:layout_height="wrap_content"
                  android:text="Child"
                  android:textSize="16dp"
                  android:textColor="@color/black"/>
              <TextView
                  android:id="@+id/tv_child"
                  android:layout_width="0dp"
                  android:layout_weight="0.50"
                  android:layout_height="wrap_content"
                  android:text="2"
                  android:textSize="16dp"
                  android:textColor="@color/black"/>
          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="@dimen/margin_10"
              android:weightSum="1">
              <TextView
                  android:layout_width="0dp"
                  android:layout_weight="0.50"
                  android:layout_height="wrap_content"
                  android:text="Total"
                  android:textSize="16dp"
                  android:textColor="@color/black"/>
              <TextView
                  android:id="@+id/tv_total"
                  android:layout_width="0dp"
                  android:layout_weight="0.50"
                  android:layout_height="wrap_content"
                  android:text="10,000"
                  android:textSize="16dp"
                  android:textColor="@color/black"/>
          </LinearLayout>
          <EditText
              android:id="@+id/et_firstName"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_butten"
              android:layout_marginTop="@dimen/margin_20"
              android:padding="@dimen/padding_10"
              android:hint=" First Name*"
              android:textColor="@color/black"
              android:inputType="textPersonName"/>
          <EditText
              android:id="@+id/et_lastname"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_butten"
              android:layout_marginTop="@dimen/margin_10"
              android:padding="@dimen/padding_10"
              android:hint=" Last Name*"
              android:textColor="@color/black"
              android:inputType="textPersonName"/>
          <Spinner
              android:id="@+id/s_gender"
              android:layout_width="match_parent"
              android:layout_height="@dimen/width_40"
              android:background="@drawable/white_butten"
              android:layout_marginTop="@dimen/margin_10"
              android:padding="@dimen/padding_10"
              android:hint="Select Gender*"
              android:textColor="@color/black"
              android:inputType="textPersonName"/>
          <EditText
              android:id="@+id/et_dateOfTravel"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_butten"
              android:layout_marginTop="@dimen/margin_10"
              android:padding="@dimen/padding_10"
              android:hint="Date of Travel*"
              android:textColor="@color/black"
              android:inputType="textPersonName"/>
          <EditText
              android:id="@+id/et_contactNo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_butten"
              android:layout_marginTop="@dimen/margin_10"
              android:padding="@dimen/padding_10"
              android:hint=" Contact Number*"
              android:textColor="@color/black"
              android:maxLength="16"
              android:inputType="textPersonName"/>
          <EditText
              android:id="@+id/et_email"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_butten"
              android:layout_marginTop="@dimen/margin_10"
              android:padding="@dimen/padding_10"
              android:hint="Email Address*"
              android:textColor="@color/black"
              android:inputType="textPersonName"/>
          <EditText
              android:id="@+id/et_userAddress"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_butten"
              android:layout_marginTop="@dimen/margin_10"
              android:padding="@dimen/padding_10"
              android:hint="Address"
              android:textColor="@color/black"
              android:inputType="textPostalAddress"/>

          <Spinner
              android:id="@+id/s_coluntryList"
              android:layout_width="match_parent"
              android:layout_height="@dimen/width_40"
              android:layout_marginTop="@dimen/margin_10"
              android:background="@drawable/white_butten"
              ></Spinner>

          <TextView
              android:id="@+id/tv_confirmBooking"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/padding_10"
              android:layout_marginLeft="@dimen/margin_10"
              android:layout_marginRight="@dimen/margin_10"
              android:layout_marginTop="@dimen/padding_30"
              android:background="@drawable/blue_butten"
              android:text="Confirm Booking"
              android:textColor="@color/white"
              android:gravity="center"
              android:fontFamily="@font/regular"/>
      </LinearLayout>
  </LinearLayout>

</ScrollView>