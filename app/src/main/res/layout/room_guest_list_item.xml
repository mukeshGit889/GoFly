<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/gray_outline"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_15"
        android:paddingRight="@dimen/padding_15"
        android:paddingTop="@dimen/padding_10"
        android:paddingBottom="@dimen/padding_10"
        android:background="@drawable/gray_top_curved">

        <TextView
            android:id="@+id/room_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Room 1"
            android:fontFamily="@font/regular"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/ic_bed_new"
            android:textSize="@dimen/text_12"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/padding_10"/>

        <ImageView
            android:id="@+id/close_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_close_view"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/adults"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12"
            android:fontFamily="@font/regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_15">

            <LinearLayout
                android:id="@+id/count_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/adult_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/rating_not_selected"
                    android:textSize="@dimen/text_18" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/count_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/adult_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="@dimen/text_18"
                    android:gravity="center"
                    android:textColor="@color/rating_not_selected"
                    android:fontFamily="@font/bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/count_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/adult_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="@dimen/text_18"
                    android:gravity="center"
                    android:textColor="@color/rating_not_selected"
                    android:fontFamily="@font/bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/count_four"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/adult_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="@dimen/text_18"
                    android:gravity="center"
                    android:textColor="@color/rating_not_selected"
                    android:fontFamily="@font/bold"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/child"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12"
            android:fontFamily="@font/regular"
            android:layout_marginTop="@dimen/margin_10"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_15">

            <LinearLayout
                android:id="@+id/child_count_zero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/child_zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="@dimen/text_18"
                    android:gravity="center"
                    android:textColor="@color/rating_not_selected"
                    android:fontFamily="@font/bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/child_count_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/child_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/text_18"
                    android:gravity="center"
                    android:textColor="@color/rating_not_selected"
                    android:fontFamily="@font/bold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/child_count_two"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:gravity="center"
                android:padding="@dimen/padding_10"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/child_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="@dimen/text_18"
                    android:gravity="center"
                    android:textColor="@color/rating_not_selected"
                    android:fontFamily="@font/bold"/>

            </LinearLayout>

        </LinearLayout>

        <!--
        Vertical Scroll list
        -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/child_age_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>