<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

        android:id="@+id/ivFriend"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@color/gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/padding_10"
        android:fontFamily="@font/medium"
        android:text="Devaraju"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16"
        app:layout_constraintEnd_toStartOf="@+id/txtIgnore"
        app:layout_constraintStart_toEndOf="@+id/ivFriend"
        app:layout_constraintTop_toTopOf="@+id/ivFriend" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_5"
        android:text="View Profile"
        android:textColor="@color/red"
        android:textSize="@dimen/text_14"
        app:layout_constraintLeft_toRightOf="@id/ivFriend"
        app:layout_constraintStart_toEndOf="@+id/ivFriend"
        app:layout_constraintTop_toBottomOf="@id/txtUserName" />


    <TextView
        android:id="@+id/txtIgnore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/padding_15"
        android:background="@drawable/bg_edit"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_5"
        android:text="Ignore"
        android:textAllCaps="true"
        android:textColor="@color/red"
        android:textSize="@dimen/text_12"
        app:layout_constraintBottom_toBottomOf="@id/ivFriend"
        app:layout_constraintEnd_toStartOf="@id/txtStatus"
        app:layout_constraintTop_toTopOf="@id/ivFriend" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_follow"
        android:paddingBottom="@dimen/padding_5"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10"
        android:paddingTop="@dimen/padding_5"
        android:text=""
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_12"
        app:layout_constraintBottom_toBottomOf="@id/ivFriend"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivFriend" />


</android.support.constraint.ConstraintLayout>