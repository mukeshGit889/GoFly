                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="07dp"
                                android:src="@drawable/taxi_home_icon"
                                android:tint="@color/blue_new" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/regular"
                                android:text="@string/transfers"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12"
                                android:visibility="visible" />

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_marginBottom="@dimen/margin_10"


                        android:gravity="center_vertical"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:id="@+id/activities_search"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_activity_home"
                                android:tint="@color/blue_new" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="@string/activities"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12"
                                android:visibility="visible" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/holiday_search"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="05dp"
                                android:src="@drawable/holiday_icon_new"
                                android:tint="@color/blue_new" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/regular"
                                android:text="@string/holiday"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12"
                                android:visibility="visible" />

                        </LinearLayout>


                        <LinearLayout

                            android:id="@+id/car_hire"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="08dp"
                                android:src="@drawable/ic_car_home"
                                android:tint="@color/blue_new" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/regular"
                                android:text="Car Hire"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12"
                                android:visibility="visible" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/guessIT"

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:padding="0dp"
                                android:src="@drawable/ic_x_logo_black_arrow_blue_02"
                                android:tint="@color/blue_new" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:fontFamily="@font/regular"
                                android:text="X-Change"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_12"
                                android:visibility="visible" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>

