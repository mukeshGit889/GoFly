            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/view_all"
                    android:fontFamily="@font/bold"
                    android:text="Best Offers"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14" />

                <TextView
                    android:id="@+id/view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/blue_butten"
                    android:padding="@dimen/padding_10"
                    android:text="@string/view_all"
                    android:textColor="@color/white"
                    android:visibility="visible" />

            </RelativeLayout>

            <!--
            Layout Manager Horizontal for internation packages
            -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/package_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@color/white"
                android:fontFamily="@font/bold"
                android:padding="@dimen/padding_10"
                android:text="Popular Hotel Destination"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/top_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

            </android.support.v7.widget.RecyclerView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@color/white"
                android:fontFamily="@font/bold"
                android:padding="@dimen/padding_10"
                android:text="Top Flight Destination"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_topFlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:fontFamily="@font/bold"
                android:padding="@dimen/padding_10"
                android:text="Exclusive Partners"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

            <android.support.v7.widget.CardView
                android:id="@+id/cv_banner_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_120"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginEnd="@dimen/margin_10"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"


                    android:src="@drawable/banner_logo_updated" />
            </android.support.v7.widget.CardView>


